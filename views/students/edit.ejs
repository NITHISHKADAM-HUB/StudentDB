<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">Edit student</h1>
    <div class="col-6 offset-3">
        <form action="/students/<%=student._id%>?_method=PUT" method="POST" autocomplete="off"
            enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="name">name</label>
                <input class="form-control" type="text" id="name" name="student[name]" value="<%=student.name %>">
            </div>
            <div class="mb-3">
                <label class="form-label" for="email">email</label>
                <input class="form-control" type="email" id="email" name="student[email]" value="<%=student.email %>">
            </div>
            <input type="file" name="student[image]" id="image" multiple>
            <div class="mb-3">
                <label class="form-label" for="phone">Phone Number</label>
                <input class="form-control" type="number" id="phone" name="student[phone]" value="<%=student.phone %>">
            </div>

            <div class="mb-3">
                <label class="form-label" for="degree">degree</label>
                <input class="form-control" type="text" id="degree" name="student[degree]" value="<%=student.degree %>">
            </div>

            <div class="mb-3">
                <% student.images.forEach(function(img, i) {  %>
                <img src="<%=img.url %>" class="img-thumbnail" alt="">
                <div class="form-check-inline">
                    <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                </div>
                <% })%>
            </div>

            <div class="mb-3">
                <button class="btn btn-info">Update student</button>
            </div>
        </form>
        <a href="/students/<%= student._id%>">Back To student</a>

    </div>
</div>