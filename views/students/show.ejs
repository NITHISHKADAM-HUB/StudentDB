<% layout('layouts/boilerplate')%>
<div class="row">
    <div class="col-6 offset-3">
        <div id="spotCarousel" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <% student.images.forEach((img, i) => {  %>
                <div class="carousel-item <%= i === 0 ? 'active' : ''%>">
                    <img src="<%= img.url%>" class="d-block w-100" width="500" height="350" alt="">
                </div>
                <% }) %>
            </div>
            <% if(student.images.length > 1) {%>
            <a class="carousel-control-prev" href="#spotCarousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#spotCarousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
            <% } %>
        </div>
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title"><%= student.name%></h5>
                <p class="card-text"><%= student.degree%></p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item text-muted"><%= student.email%></li>
                <li class="list-group-item"><%= student.phone%></li>
            </ul>
            <div class="card-body">
                <a class="card-link btn btn-info" href="/students/<%=student._id%>/edit">Edit</a>
                <form class="d-inline" action="/students/<%=student._id%>?_method=DELETE" method="POST">
                    <button class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>